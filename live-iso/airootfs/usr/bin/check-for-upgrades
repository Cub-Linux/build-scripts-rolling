set -e
#!/bin/bash

#Check if root
if [ "$(id -u)" != "0" ]; then
   echo "This script must be run as root!"
   exit 1
fi

source /etc/os-release
curl -s https://raw.githubusercontent.com/NorcuxOS/downloads/master/releases.txt | grep -q "$VERSION"
if [ $? -eq 0 ] ; then
    mkdir -p /etc/upgrades/
    curl -s https://raw.githubusercontent.com/NorcuxOS/downloads/master/releases.txt | sed "/$VERSION/Q" | tac > /etc/upgrades/upgrades.txt
    if [ -s /etc/upgrades/upgrades.txt ] ; then
        echo "=== Upgrade to $(tail -n1 /etc/upgrades/upgrades.txt) available! ==="  
    else 
        echo "No Upgrades available!"
    fi
else
wget --spider --quiet https://NorcuxOS.org
if [ "$?" != 0 ]; then
  echo "No Internet connection!"
  exit 1
fi
echo "Invalid version!"
fi
